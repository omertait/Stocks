<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp"
    tools:context=".ui.fragments.ItemDetailFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/item_image"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:src="@drawable/default_image" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="Stock Name"
                    android:textColor="@color/stock_symbol"
                    android:textSize="22sp" />

            </LinearLayout>



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/item_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/stock_symbol_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="Symbol"
                            android:textColor="@color/stock_symbol"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/stock_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="loading"
                            android:textColor="@color/stock_name"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:padding="3dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:padding="3dp">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/today_price_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="0.55"
                            android:gravity="center"
                            android:text="Today change"
                            android:textColor="@color/stock_symbol"
                            android:textSize="17sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/today_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="0.45"
                            android:gravity="center|top"
                            android:text="loading"
                            android:textColor="@color/stock_name"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="0.3"
                        android:orientation="vertical"
                        android:padding="3dp">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_price_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="0.55"
                            android:gravity="center"
                            android:text="current Price"
                            android:textColor="@color/stock_symbol"
                            android:textSize="17sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="0.45"
                            android:gravity="center|top"
                            android:text="loading"
                            android:textColor="@color/stock_name"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_amount_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:layout_weight="0.55"
                            android:gravity="center"
                            android:text="Amount"
                            android:textColor="@color/stock_symbol"
                            android:textSize="17sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="0.45"
                            android:gravity="center|top"
                            android:text="loading"
                            android:textColor="@color/stock_name"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical">


                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/total_change_title"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:gravity="top|center"
                                android:text="total_change"
                                android:textColor="@color/stock_symbol"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/total_change"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:gravity="top|center"
                                android:text="loading"
                                android:textColor="@color/stock_name"
                                android:textSize="18sp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:orientation="vertical">


                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/item_profit_title"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:gravity="top|center"
                                android:text="profit"
                                android:textColor="@color/stock_symbol"
                                android:textSize="18sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/item_profit"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:gravity="top|center"
                                android:text="loading"
                                android:textColor="@color/stock_name"
                                android:textSize="18sp" />
                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_amount_total_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="start|center"
                            android:text="total_worth"
                            android:textColor="@color/stock_symbol"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/item_amount_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="top|center"
                            android:text="loading"
                            android:textColor="@color/stock_name"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

</LinearLayout>


